require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "muck-resources"
    gem.summary = "This is a container gem for resources like images, javascript and stylesheets for the muck framework."
    gem.email = "justin@tatemae.com"
    gem.homepage = "http://github.com/tatemae/muck-resources"
    gem.description = "This is a container gem for resources like images, javascript and stylesheets for the muck framework and includes rake tasks for syncing these files into your application."
    gem.authors = ["Justin Ball", "Joel Duffin"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end
